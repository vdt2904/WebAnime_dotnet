@model WebAnime.Models.TbBlog
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>CreateBlog</h1>

<h4>TbBlog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateBlog" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaAnime" class="control-label"></label>
                <select asp-for="MaAnime" class="form-control" asp-items="ViewBag.MaAnime"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idblog" class="control-label"></label>
                <select asp-for="Idblog" class="form-control" asp-items="ViewBag.IdBlog"></select>
            </div>
            <div class="form-group">
                <label asp-for="Trailer" class="control-label"></label>
                <input type="file" id="video" name="video" class="form-control-file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

