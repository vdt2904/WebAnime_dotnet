@model WebAnime.Models.TbAnime
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "CreateAnime";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>CreateAnime</h1>

<h4>TbAnime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateAnime" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="MaAnime" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Anime" class="control-label"></label>
                <input asp-for="Anime" class="form-control" />
                <span asp-validation-for="Anime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NgayPhatSong" class="control-label"></label>
                <input asp-for="NgayPhatSong" class="form-control" />
                <span asp-validation-for="NgayPhatSong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThongTin" class="control-label"></label>
                <input asp-for="ThongTin" class="form-control" />
                <span asp-validation-for="ThongTin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaHp" class="control-label"></label>
                <select asp-for="MaHp" class ="form-control" asp-items="ViewBag.MaHp"></select>
            </div>
            <div class="form-group">
                <label asp-for="TongSoTap" class="control-label"></label>
                <input asp-for="TongSoTap" class="form-control" />
                <span asp-validation-for="TongSoTap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaLp" class="control-label"></label>
                <select asp-for="MaLp" class ="form-control" asp-items="ViewBag.MaLp"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lp" class="control-label"></label>
                <select asp-for="Lp" class="form-control" asp-items="ViewBag.Lp"></select>
            </div>
            <div class="form-group">
                <input type="file" id="file" name="file" accept="image/*" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

