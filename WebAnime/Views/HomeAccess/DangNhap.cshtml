@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DangNhap";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@model TbNguoiDung
<section class="login spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Login</h3>
                    @using (Html.BeginForm("DangNhap", "HomeAccess", FormMethod.Post)){
                        <div class="input__item">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-lg", placeholder = "Email Address", required = "required", autofocus = "autofocus", type = "email", pattern = "[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,}$" })
                            <span class="icon_mail"></span>
                        </div>
                        <div class="input__item">
                            @Html.TextBoxFor(x=>x.Pasword, new {@class="form-control form-control-lg",type="password",placeholder="Password"})
                            <span class="icon_lock"></span>
                        </div>
                        <button type="submit" class="site-btn">Login Now</button>
                    }
                    <a asp-action="QuenMk" asp-controller="HomeAccess" class="forget_pass">Forgot Your Password?</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login__register">
                    <h3>Dont’t Have An Account?</h3>
                    <a asp-action="DangKy" asp-controller="HomeAccess" class="primary-btn">Register Now</a>
                </div>
            </div>
        </div>

    </div>
</section>

